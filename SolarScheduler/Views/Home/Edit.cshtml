@model SolarScheduler.Models.Note
@{
    ViewBag.Title = "Edit";
}
<form asp-action="edit" asp-controller="home" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Title" class="control-label">Title</label>
        <input type="text" asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Text" class="control-label">Text</label>
        <textarea type="text" asp-for="Text" class="form-control" id="exampleFormControlTextarea1" rows="3" style="margin-top: 0px; margin-bottom: 0px; height: 63px;"></textarea>
    </div>
    <div class="form_flex">
        <div class="form-group">
            <label asp-for="Select" class="control-label">Importance</label>
            <select asp-for="Select" class="control-label Input_set">
                <option>none</option>
                <option>important</option>
                <option>not_important</option>
            </select>
        </div>
        <span>     </span>
        <div class="form-group">
            <label asp-for="Time" class="control-label">Time</label>
            <input asp-for="Time" class="control-label datetimepicker" type="text" />

        </div>
        <span>     </span>
        <div class="form-group">
            <label asp-for="Staus" class="control-label">Status</label>
            <select asp-for="Staus" class="control-label Input_set">
                <option>not executed</option>
                <option>done</option>
                <option>pause</option>
            </select>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Save" class="btn_Add_Card" />
    </div>


</form>

<style>
    .header_add {
        display: none;
    }
</style>